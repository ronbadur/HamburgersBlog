<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>HamburgersBlog - @ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Views/css")
    @Scripts.Render("~/bundles/modernizr")
    @Styles.Render("~/Styles/home_page.css")
</head>

<body>


    <div>
        <!-- <audio src="./audio/mymusic.mp3" type="audio/mpeg" autoplay /> -->
    </div>
    <header>
        @*<div>
                <img alt="home" src="~/media/images/top-burger.svg" viewBox="0 0 300 400" class="homepage-img" />
            </div>*@
        <div class="blog-header">
            <div class="container">
                <h1 class="blog-title">Hamburgers Blog</h1>
                <p class="lead blog-description">Can't resist a good Burger? You are at the right place!</p>
            </div>
        </div>
        <div class="blog-app-bar">
            <div class="container">
                <nav class="nav">
                    <!-- Navigation -->
                    <ul>
                        <li class="nav-link">@Html.ActionLink("Home", "Index", "Home")</li>
                        <li class="nav-link">@Html.ActionLink("Restaurants", "Index", "Restaurants")</li>
                        <li class="nav-link">@Html.ActionLink("Locations", "Index", "Locations")</li>
                        @{
                            if (!Request.IsAuthenticated)
                            {
                                <li class="nav-link">@Html.ActionLink("Admin", "Login", "Admin")</li>
                            }
                            else
                            {
                                <li class="nav-link dropdown">
                                    <button class="dropbtn nav-options">Options</button>
                                    <ul class="dropdown-content">
                                        <li class="nav-link">@Html.ActionLink("Comments", "Index", "Comments")</li>
                                        <li class="nav-link">@Html.ActionLink("Tweet", "TweetPage", "Twitter")</li>
                                        <li class="nav-link">@Html.ActionLink("Statistics", "GroupByArea", "Restaurants")</li>
                                        <li class="nav-link">@Html.ActionLink("Logout", "Logout", "Admin")</li>
                                    </ul>
                                </li>

                            }
                        }
                    </ul>
                </nav>
            </div>
        </div>

    </header>

    <main role="main" class="container">
        <aside class="col-sm-2 aside">
            <div class="sidebar-module">
                <h2>Hamburgers</h2>
                <section class="side-bar-section">
                    <header>
                        <h3>Our Top 3:</h3>
                    </header>
                    <ul class="list-aside">
                        <li>The Prozdor</li>
                        <li>Vitrina</li>
                        <li>Humangous</li>
                    </ul>
                </section>
                <section class="side-bar-section">
                    <header>
                        <h3>Our <span class="not">NOT</span>  Recommended:</h3>
                    </header>
                    <ul class="list-aside">
                        <li>Saloon Burger</li>
                        <li>Ad Haetzem</li>
                        <li>110 Burgers</li>
                        <li>Cabana</li>
                    </ul>
                </section>
            </div>
        </aside>
        <div class="col-sm-10">
            <div class="blog-main">
                @RenderBody()
            </div>
        </div>
    </main>

    <footer class="blog-footer">
        <p>© All rights reserverd: BRR Team</p>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/lightslider-js")
    @RenderSection("scripts", required: false)
</body>
</html>
